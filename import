def verifica_números(número_lista, mínimo, máximo):
    while True:
        try:
            n=float(input(número_lista))
            if n>= mínimo and n<= máximo:
                return n
            else:
                print(f"entrar com valor entre {mínimo} e {máximo}")
        except ValueError:
            print("entrar com número real")
            
